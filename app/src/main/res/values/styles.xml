<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalnotitle">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontForEditText" parent="Widget.AppCompat.EditText">

        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="FontForButtonText" parent="TextAppearance.AppCompat.Button">

        <item name="fontFamily">@font/iransans</item>

    </style>

    <style name="FontForBottomNavigation" parent="Widget.Design.BottomNavigationView">

        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="FontForNavigation" parent="Widget.Design.BottomNavigationView">

        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:radius">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SpinnerThemeTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:radius">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/iransans</item>

    </style>

    <style name="scrollstyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

</resources>
